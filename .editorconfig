# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx}]
indent_size = 4
indent_style = space
max_line_length = 100

[*.{html,css,less,sass,scss,tmpl}]
indent_size = 2
indent_style = space
max_line_length = 100

[*.{json,yaml}]
indent_size = 2
indent_style = space

[*.{md,txt}]
indent_size = 4
indent_style = space
max_line_length = 100

[*.{xml,conf}]
indent_size = 4
indent_style = space
